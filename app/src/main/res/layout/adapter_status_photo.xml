<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/status_layout_padding"
    android:visibility="gone"
    android:id="@+id/status_photo_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo1"
            style="@style/status_photo_style" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo2"
            style="@style/status_photo_style" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo3"
            style="@style/status_photo_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo4"
            style="@style/status_photo_style" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo5"
            style="@style/status_photo_style" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo6"
            style="@style/status_photo_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo7"
            style="@style/status_photo_style" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo8"
            style="@style/status_photo_style" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/status_photo9"
            style="@style/status_photo_style" />
    </LinearLayout>
</LinearLayout>
