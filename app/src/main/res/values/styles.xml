<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>
    <!--定义每一条微博的photo style-->
    <style name="status_photo_style">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">@dimen/status_thumbnail_photo</item>
        <item name="android:layout_height">@dimen/status_thumbnail_photo</item>
        <item name="android:layout_margin">@dimen/status_photo_padding</item>
    </style>
    <!--定义每一条微博的text style-->
    <style name="status_name">
        <item name="android:textColor">@color/status_name_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/status_text_name</item>
    </style>
    <style name="status_primary_text">
        <item name="android:textColor">@color/status_primary_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/status_text_primary</item>
    </style>
    <style name="status_second_text">
        <item name="android:textColor">@color/status_second_text</item>
        <item name="android:textSize">@dimen/status_text_secondry</item>
    </style>
</resources>
